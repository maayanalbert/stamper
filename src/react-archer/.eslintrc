{
  "root": true,
  "plugins": [
    "prettier",
    "react",
    "flowtype"
  ],
  "extends": [
    "standard",
    "plugin:cypress/recommended",
    "standard-react",
    "plugin:prettier/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "version": "16.2"
    }
  },
  "globals": {
    "jest": true,
    "expect": true,
    "it": true,
    "describe": true,
    "beforeEach": true,
    "window": true
  },
  "rules": {
    "react/jsx-curly-newline": 0,
    "prettier/prettier": "error"
  }
}
